#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import secondscreen secondscreen
#:import thirdscreen thirdscreen
#:import fourthscreen fourthscreen
<ScreenManagement>:
	transition: FadeTransition()
	MainScreen:
	SecondScreen:
	ThirdScreen:
	FourthScreen:
<MainScreen>:
    name:'main'
    AnchorLayout:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Introduction:
                id:_introduction
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'   
            Play:
                id:_play
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'      
            Exit:
                Button:
                    text:'Exit'
                    size_hint: (0.05,0.05) 
                    on_press: app.stop()
#chia man hinh chinh thanh 2 phan, phan 1 anchorlayout top, center 

